<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Feedback_GUI" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitStart"
                android:src="@drawable/topbar" />

            <ImageButton
                android:id="@+id/imageButtonHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="43dp"
                android:adjustViewBounds="true"
                android:background="@drawable/home"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home" />

            <ImageButton
                android:id="@+id/imageButtonSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageButtonHome"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="43dp"
                android:layout_toRightOf="@+id/imageButtonHome"
                android:adjustViewBounds="true"
                android:background="@drawable/spanner"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/spanner" />

            <ImageButton
                android:id="@+id/imageButtonNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageButtonSettings"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/imageButtonSettings"
                android:adjustViewBounds="true"
                android:background="@drawable/notifications"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/notifications" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButtonHome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:maxHeight="70dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/thingreybox" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="6dp"
                android:text="Lecture Feedback"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:adjustViewBounds="true"
                android:maxWidth="305dp"
                android:scaleType="fitStart"
                android:src="@drawable/redandgrey" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:maxHeight="300dp"
                android:maxWidth="290dp"
                android:paddingTop="1dp"
                android:scaleType="fitStart"
                android:src="@drawable/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:text="Lecture Description"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:maxWidth="305dp"
                android:scaleType="fitStart"
                android:src="@drawable/redandgrey" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignTop="@+id/ImageView01"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:text="Rate Lecture"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="13sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView01"
                android:layout_below="@+id/TextView02"
                android:layout_marginLeft="10dp"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:paddingTop="5dp"
                android:stepSize="0.5" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="390dp"
                android:adjustViewBounds="true"
                android:maxWidth="305dp"
                android:src="@drawable/comment" />

            <EditText
                android:id="@+id/editTextCommentInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignRight="@+id/imageButtonBack"
                android:layout_alignTop="@+id/imageView5"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="26dp"
                android:ems="10"
                android:height="100dp"
                android:inputType="textMultiLine"
                android:textSize="16px" />

            <TextView
                android:id="@+id/TextViewComment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/buttonSubmitComment"
                android:layout_below="@+id/editTextCommentInput"
                android:layout_marginTop="28dp"
                android:layout_toRightOf="@+id/TextView02"
                android:maxLines="4"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/imageButtonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageButtonNotifications"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/imageButtonNotifications"
                android:adjustViewBounds="true"
                android:background="@drawable/back"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:text="-.--"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/buttonSubmitRating"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView01"
                android:layout_alignRight="@+id/ImageView01"
                android:text="Submit" />

            <Button
                android:id="@+id/buttonSubmitComment"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editTextCommentInput"
                android:layout_alignLeft="@+id/buttonSubmitRating"
                android:text="Submit" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_toLeftOf="@+id/imageButtonNotifications"
                android:text="0.0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/TextView02"
                android:layout_below="@+id/ratingBar"
                android:text="Rating:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignLeft="@+id/textView5"
                android:text="Average:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/buttonReply"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/TextViewComment2"
                android:layout_alignTop="@+id/TextViewComment1"
                android:layout_marginTop="58dp"
                android:text="Reply" />

            <TextView
                android:id="@+id/TextViewComment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/buttonSubmitComment"
                android:layout_below="@+id/buttonReply"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/TextView02"
                android:maxLines="4"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editTextLectureDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_alignRight="@+id/imageView3"
                android:layout_alignTop="@+id/imageView4"
                android:ems="10"
                android:maxLines="4"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonReply"
                android:layout_alignTop="@+id/editTextCommentInput"
                android:layout_marginTop="19dp"
                android:src="@drawable/picture" />

            <Button
                android:id="@+id/buttonDescriptionEdit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignLeft="@+id/buttonSubmitRating"
                android:layout_alignRight="@+id/buttonSubmitRating"
                android:text="Edit" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>